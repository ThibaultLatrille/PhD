issn = {1061-4036},
journal = {Nature genetics},
keywords = {Alleles,Genetic Diseases, Inborn,Genetic Diseases, Inborn: genetics,Genetic Linkage,Genetic Markers,Genetic Predisposition to Disease,Genetics, Population,Genome, Human,Humans,Models, Genetic},
