journal = {Genetics},
keywords = {Beneficial mutations,Compensatory evolution,DFE,Deleterious mutations,Effective population size,Epistasis},
month = {nov},
number = {3},
pages = {953--966},
publisher = {Genetics Society of America},
title = {{Comparison of the full distribution of fitness effects of new amino acid mutations across great apes}},
volume = {213},
