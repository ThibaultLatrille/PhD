doi = {10.7554/eLife.27344},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Pouyet et al. - 2017 - Recombination, meiotic expression and human codon usage.pdf:pdf},
issn = {2050084X},
