doi = {10.1073/pnas.1314781111},
file = {:home/thibault/.var/app/com.elsevier.MendeleyDesktop/data/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ashenberg, Gong, Bloom - 2013 - Mutational effects on stability are largely conserved during protein evolution.pdf:pdf},
issn = {00278424},
