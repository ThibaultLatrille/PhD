keywords = {Chaperone proteins,Free energy,Multiple alignment calculation,Mutational analysis,Protein interactions,Protein structure comparison,Sequence alignment,Sequence databases},
month = {dec},
number = {12},
pages = {e1000592},
publisher = {Public Library of Science},
title = {{Trade-off between Positive and Negative Design of Protein Stability: From Lattice Models to Real Proteins}},
